{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:mud && pnpm run build:abi && pnpm run build:abi-ts",
    "build:abi": "forge clean && forge build",
    "build:abi-ts": "mud abi-ts",
    "build:mud": "mud tablegen && mud worldgen",
    "deploy:caldera": "pnpm run build && pnpm mud deploy --profile=caldera",
    "deploy:caldera-sepolia": "pnpm run build && pnpm mud deploy --profile=caldera-sepolia",
    "deploy:local": "pnpm mud deploy",
    "deploy:redstone-holesky": "pnpm run build && pnpm mud deploy --profile=redstone-holesky",
    "dev": "pnpm mud dev-contracts",
    "devnode": "mud devnode",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write './**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "mud test"
  },
  "dependencies": {
    "@latticexyz/cli": "2.0.1",
    "@latticexyz/common": "2.0.1",
    "@latticexyz/config": "2.0.1",
    "@latticexyz/protocol-parser": "2.0.1",
    "@latticexyz/schema-type": "2.0.1",
    "@latticexyz/store": "2.0.1",
    "@latticexyz/world": "2.0.1",
    "@latticexyz/world-modules": "2.0.1",
    "dotenv": "^16.3.1",
    "tsx": "^3.12.8",
    "viem": "1.14.0"
  },
  "devDependencies": {
    "@primodiumxyz/contracts": "0.11.0-alpha.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.15.11",
    "abdk-libraries-solidity": "^3.2.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.1",
    "solhint-plugin-mud": "2.0.1",
    "solidity-trigonometry": "https://github.com/mds1/solidity-trigonometry.git",
    "typechain": "^8.1.1"
  }
}